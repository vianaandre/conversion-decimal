<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style/style.css">
    <title>Dev.Convertion</title>

    <script src="/scripts/script.js" defer type="module"></script>
</head>

<body>
    <div class="header">
        <div class="content-header">
            <h1>dev.convertion</h1>
            <div>
                <img src="/img/icn-title.svg" alt="Ícone Cabeçalho" title="Ícone Cabeçalho">
            </div>
        </div>
    </div>

    <form class="form">
        <div class="form-buttons">
            <h2>Bases</h2>
            <div class="button-bases">
                <a href="/" id="button-decimal" class="buttonCorDecimal <%=  %> ">10</a>
                <a href="2" id="button-binario" class="buttonCorBinario">2</a>
                <a href="8" id="button-octal" class="buttonCorOctal">8</a>
                <a href="16" id="button-hexadecimal" class="buttonCorHexadecimal">16</a>
            </div>
        </div>

        <!--abre entrada-->
        <div class="form-input">
            <h2>Entrada</h2>
            <div class="content-input">
                <div class="base"><%= dados.inputBase %> </div>
                <div class="input" id="componenteInput">
                    <input type="text" id="<%= dados.idInput %>" placeholder="Number" required>
                </div>
            </div>
        </div>
        <!--fecha entrada-->

        <!--abre saida-->
        <div class="form-output">
            <h2>Saída</h2>
            <div class="content-output">
                <div class="base"><%= dados.outputBases.Base1 %> </div>
                <div class="input">
                    <input type="text" placeholder="Binário" id="<%= dados.outputId.Id1 %>" readonly>
                </div>
            </div>
            <div class="content-output">
                <div class="base"><%= dados.outputBases.Base2 %> </div>
                <div class="input">
                <input type="text" placeholder="Octal" id="<%= dados.outputId.Id2 %>" readonly>
                </div>
            </div>
            <div class="content-output">
                <div class="base"><%= dados.outputBases.Base3 %> </div>
                <div class="input">
                <input type="text" placeholder="Hexadecimal" id="<%= dados.outputId.Id3 %>" readonly>
                </div>
            </div>
        </div>
        <!--fecha saida-->

        <!--abre button-->
        <button id="buttonConverte" class="button-action-converte">Converter</button>
        <!--fecha button-->
    </form>

    <footer class="rodape">
        <a href="https://github.com/vianaandre" target="_blank">
            <img src="/img/github.svg" title="Ícone do Github" alt="Ícone do Github"/>
            <p>
                Me siga no github
            </p>
        </a>
    </footer>

</body>

</html>